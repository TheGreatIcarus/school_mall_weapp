.switch{
  width:100%;
  height: 90rpx;
  line-height: 90rpx;
  display: flex;
  position: fixed;
  top:0;
  justify-content: space-between;
  align-items: center;
  background-color: #fff;
}
.switch_label{
  width: 25%;
  height: 100%;
  text-align: center;
  font-size:28rpx;
  color:#353535;
  box-sizing: border-box;
  position: relative;
}
.switch_label.active{
color: #5198f5;
border-bottom: 6rpx solid #5198f5;
}

.if_no_order{
  width:100%;
  position: absolute;
  top: 90rpx;
  bottom: 0;
  background-color: #f2f2f2;
  text-align: center;
}
.no_order_image{
  width: 80rpx;
  height: 95rpx;
  margin-top:260rpx;
  margin-bottom: 5rpx;
}


